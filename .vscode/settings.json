{
  "editor.fontSize": 18,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "comments": true
  },
  "editor.codeActionsOnSave": {
    "source.sortImports": "always"
  },
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    ".vscode": true,
    ".github": true,
    "LICENSE": true,
    "package-lock.json": true
  }
}